<%- include('partials/header') %>
<div class="container">
    <h1>Add New Comment</h1>
    <form method="POST" action="/comics/<%= comic._id %>/comments/<%= comment._id %>?_method=PUT">
            <div class="form-group">
            <label for="text">Comment</label>
            <textarea name="text" class="form-control" id="text" rows="8" cols="80" placeholder="comment text" required><%= comment.text %></textarea>
        </div>
        
        <button type="submit" class="btn btn-primary"> Submit Comment </button>
    </form>
</div>
<%- include('partials/footer') %>